<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container">
    <div class="col-lg-6 mx-auto my-2 p-3 bg-light border rounded">
        <h1>Edit task</h1>
        <form method="POST" action="/tasks/<%= task.id %>?_method=PATCH">
            <section class="input-group pb-3 px-4">
                <textarea name="task" id="" cols="30" rows="3" class="form-control">
                    <%= task.task %>
                </textarea>
            </section>
            <div class="d-flex px-4 justify-content-center">
                <button class="btn btn-lg btn-success">Save</button>
            </div>
        </form>
    </div>
</div>

